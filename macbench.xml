		<image name="logo">
			<pos>0.227 0.225</pos>
			<maxSize>0.343 0.175</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
		<image name="background" extra="true">
			<path>./art/wb_bg.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>

		<image name="md_image">
			<pos>0.76 0.34</pos>
			<maxSize>0.32 0.37</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
		<textlist name="gamelist">
