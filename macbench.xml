<theme>
    <formatVersion>4</formatVersion>

	<view name="system">
        
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <size>1 0.2325</size>
            <pos>0 0.3</pos>
            <origin>0 0</origin>
            <color>FFFFFF00</color>
        </carousel>
	
		<helpsystem name="help">
			<pos>0.4 0.01</pos>
			<textColor>1A1A1A</textColor>
			<iconColor>1A1A1A</iconColor>
			<fontPath>./art/Chicago.ttf</fontPath>
			<fontSize>0.036</fontSize>
		</helpsystem>
		
		<image name="background" extra="true">
			<path>./art/wb_bg_system.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>

	</view>

    <view name="basic">

		<helpsystem name="help">
			<pos>0.05 0.01</pos>
            <origin>0 0</origin>
			<textColor>1A1A1A</textColor>
			<iconColor>1A1A1A</iconColor>
			<fontPath>./art/Chicago.ttf</fontPath>
			<fontSize>0.036</fontSize>
		</helpsystem>

		<image name="logo">
			<pos>0.495 0.225</pos>
			<maxSize>0.354 0.174</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
		<image name="background" extra="true">
			<path>./art/wb_bg_basic.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>
		
		<textlist name="gamelist">
			<pos>0.038 0.413</pos>
			<size>0.906 0.536</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<fontPath>./art/Chicago.ttf</fontPath>
			<fontSize>0.04</fontSize>
			<selectorColor>1A1A1A</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
			<primaryColor>1A1A1A</primaryColor>
			<secondaryColor>1A1A1A</secondaryColor>
			<forceUppercase>0</forceUppercase>
		</textlist>

	</view>

	<view name="detailed">
	
		<helpsystem name="help">
			<pos>0.05 0.01</pos>
            <origin>0 0</origin>
			<textColor>1A1A1A</textColor>
			<iconColor>1A1A1A</iconColor>
			<fontPath>./art/Chicago.ttf</fontPath>
